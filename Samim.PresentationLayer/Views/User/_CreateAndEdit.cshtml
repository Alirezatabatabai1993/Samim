@model Samim.ViewModel.VMUserCreateAndEdit




<form id="CreateAndEditForm">

	@if (!string.IsNullOrEmpty(Model.Id))
	{
		<input type="hidden" asp-for="Id" />
	}

	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<label asp-for="FirstName"></label>
				<input class="form-control form-control-sm" type="text" asp-for="FirstName" />
				<span class="text-danger validation" id="spanFirstName"></span>
			</div>
		</div>

		<div class="col-md-6">
			<div class="form-group">
				<label asp-for="LastName"></label>
				<input class="form-control form-control-sm" type="text" asp-for="LastName" />
				<span class="text-danger validation" id="spanLastName"></span>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<label asp-for="UserName"></label>
				<input class="form-control form-control-sm" type="text" asp-for="UserName" />
				<span class="text-danger validation" id="spanUserName"></span>
			</div>
		</div>

		<div class="col-md-6">
			<div class="form-group">
				@if (string.IsNullOrEmpty(Model.Id))
				{
					<label asp-for="Password"></label>
					<div class="inner-addon right-addon">
						<a id="eyeButton" href="#" onmousedown="EyeButtonMouseDownFunction()" onmouseup="EyeButtonMouseUpFunction()"><i class="fa fa-eye"></i></a>
						<input id="passwordInput" class="form-control form-control-sm" type="password" asp-for="Password" />
						<span class="text-danger validation" id="spanPassword"></span>
					</div>
				}
				else
				{
					<label asp-for="Password"></label>
					<button type="button" class="form-control form-control-sm" onclick="OpenEditPasswordModal()">Change Password</button>
				}
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<label asp-for="Email"></label>
				<input class="form-control form-control-sm" type="text" asp-for="Email" />
			</div>
		</div>

		<div class="col-md-6">
			<div class="form-group">
				<label asp-for="PhoneNumber"></label>
				<input class="form-control form-control-sm" type="text" asp-for="PhoneNumber" />
			</div>
		</div>
	</div>
	<hr />
	<button type="button" onclick="@(string.IsNullOrEmpty(Model.Id)?"SubmitButtonClicked()":"EditButtonClicked()")" class="btn btn-primary btn-sm float-right"><span class="fa fa-paper-plane"></span> @(Model.Id == null ? "submit" : "Edit")</button>
</form>